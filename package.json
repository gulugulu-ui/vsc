{
  "name": "my-bishe",
  "displayName": "my-bishe",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
      "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "bisheView",
                    "name": "人车交互系统操作面板 (Control Panel)"
                }
            ]
        },
                "commands": [
            {
                "command": "my-bishe.startSimulator",
                "title": "启动仿真引擎",
                "icon": "$(play)"
            },
            {
                "command": "my-bishe.stopSimulator",
                "title": "停止仿真",
                "icon": "$(debug-stop)"
            },
            {
                "command": "my-bishe.showReport",
                "title": "生成分析报告",
                "icon": "$(graph)"
            },
            {
                "command": "my-bishe.showDocs",
                "title": "系统说明",
                "icon": "$(book)"
            }
        ],

        "menus": {
            "view/title": [
                {
                    "command": "my-bishe.startSimulator",
                    "when": "view == bisheView",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "my-bishe.startSimulator",
                    "when": "view == bisheView",
                    "group": "inline"
                }
            ]
        }
    },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
